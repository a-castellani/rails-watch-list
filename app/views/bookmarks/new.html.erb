<div class="row mt-3 d-flex justify-content-center">
  <div class="col-5">
    <h2>Add a new bookmark</h2>
    <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.submit "Add bookmark", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
